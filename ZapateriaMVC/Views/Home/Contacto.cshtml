
@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Share/MasterFrontend.cshtml";
}
    <div class="container-fluid">
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="contact-wrap">
                    <h3>Comunicate con nosotros</h3>
                    <form action="#" class="contact-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname">Nombre: </label>
                                    <input type="text" id="fname" class="form-control" placeholder="Ingresa tu Nombre">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lname">Apellido: </label>
                                    <input type="text" id="lname" class="form-control" placeholder="Ingresa tu Apellido">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="text" id="email" class="form-control" placeholder="Tu Direccion Email">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="subject">Acerca</label>
                                    <input type="text" id="subject" class="form-control" placeholder="Tema del mensaje">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="message">Mensaje</label>
                                    <textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Escribe aqui tu mensaje....."></textarea>
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="submit" value="Enviar Mensaje" class="btn btn-primary">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/img/item-11.jpg" />
            </div>
        </div>
    </div>